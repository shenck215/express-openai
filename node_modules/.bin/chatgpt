#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules/chatgpt/bin/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules/chatgpt/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules/chatgpt/bin/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules/chatgpt/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/chatgpt@5.2.2/node_modules:/Users/shenck/express-openai/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../chatgpt/bin/cli.js" "$@"
else
  exec node  "$basedir/../chatgpt/bin/cli.js" "$@"
fi
